<!doctype html>
<html>
<head>
    <title>List</title>
    <link rel="stylesheet" href="//cdn.rawgit.com/milligram/milligram/master/dist/milligram.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>

<body>
    <div class="row">
    <div class="col-12 col-md-12">
	<table class="table" name="user-list-table">
	<thead class="thead-light">
    <tr>
      <th colspan="2" scope="row" style="background-color:#1b313f;color:#ffffff">Friends <a href="/logout"><i class="fa fa-sign-out" style="float:right;color:white" aria-hidden="true"></a></i></th>
    </tr>
	</thead>
	<tbody>
    <tr>
		<td style="width: 5%;text-align: center;"><img src="/images/defaultFace.png" class="image" id="image-frame" height="50px" width="50px" style="margin-top: -10%;"/></td>
		<td style="cursor:pointer;padding-top:14px;"><a href="/chat?id=0"  style="text-decoration:none">Echo さん</a>
		</td>
	</tr>
	<% if (listUsers) { for(var i=0; i < listUsers.length; i++) { %>
	<tr>
		<td style="width: 5%;text-align: center;">	<% if (listUsers[i].userImage) { %>
			<img src="data:image/png;base64,<%= listUsers[i].userImage %>" class="image" id="image-frame" height="50px" width="50px" style="border-radius: 100%;"/>
			<% } else {%>
		<img src="/images/defaultFace.png" class="image" id="image-frame" height="50px" width="50px" style="border-radius: 100%;"/><% }%>
		</td>
		<td style="cursor:pointer;padding-top:14px;"><a  style="text-decoration:none" href="/chat?id=<%= listUsers[i].id %>"><%= listUsers[i].nickName %> さん </a>
		</td>
	</tr>
	<% } }%>
</tbody>
</table>
</div>
</div>
</body>
<script>

</script>
</html>